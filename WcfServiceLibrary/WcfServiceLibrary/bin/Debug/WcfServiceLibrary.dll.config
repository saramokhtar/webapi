<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <system.serviceModel>
    <services>
      <service name="WcfServiceLibrary.calc" behaviorConfiguration="meta">
        <endpoint address="/calc"  binding="webHttpBinding" contract="WcfServiceLibrary.icalc" behaviorConfiguration="rest">
          
        </endpoint>
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:7070"/>
          </baseAddresses>
          
        </host>
      </service>
    </services>
    <behaviors>
      <endpointBehaviors>
        <behavior name="rest" >
          <webHttp helpEnabled="true"/>
        </behavior>
      </endpointBehaviors>
      <serviceBehaviors>
        <behavior name="meta" >
          <serviceMetadata httpGetEnabled="true" httpGetUrl="/meta"/>
          
          
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>
</configuration>
